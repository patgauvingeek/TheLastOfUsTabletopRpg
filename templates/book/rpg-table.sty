% Table Header
\newcommand{\header}[1]{{
	\par\vspace*{5pt}
	\noindent
	\sffamily\bfseries\scshape
	#1}}

% Table Environment
\newenvironment{rpg-table}[1][lX]{
	\par\vspace*{5pt}
	\noindent
	\fontfamily{lmss}\selectfont %Select font
	\rowcolors{1}{bgtan}{commentgreen} % Alternate colors
	\tabularx{\linewidth}{#1}
	}
	{\endtabularx\vspace{5pt plus 1pt}\noindent} 

